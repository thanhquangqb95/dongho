<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*CSS*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/Quang.css" rel="stylesheet" />
    @*icon*@
    <Link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    @*font*@
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
</head>
<body id="home">
    <div class="web">
        @*Top header*@
        <header>
            <div class="col-md-12 col-sm-12">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2 col-md-offset-5 col-sm-12">
                            <div class="logo col-md-12">
                                <a href="~/Home" class="logo"><img alt="" src="~/image/logo/rolex-logo.svg"></a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </header>
        <div class="clearfix"></div>
        @*Quan ly*@
        <div class="QuanLy">
            <div class="container">
                <div class="row">

                    <div class="col-md-2">
                        <div class="MenuQuanLy">
                            <p class="lead">MỤC QUẢN LÝ</p>
                            <div >                              
                                <ul class="list-group">
                                    <li><a href="~/QuanLy/QLSANPHAM" class="list-group-item active">Quản Lý Sản Phẩm</a></li>
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Menu 1 <span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Submenu 1-1</a></li>
                                            <li><a href="#">Submenu 1-2</a></li>
                                            <li><a href="#">Submenu 1-3</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="#" class="list-group-item">Quản Lý Tài Khoản</a></li>
                                    <li><a href="~/QuanLy/DonDatHang" class="list-group-item">Quản Lý Đơn Đặt Hàng</a></li>
                                </ul>
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-md-9">
                        <div class="NoiDungQuanLy">@RenderBody()</div>
                    </div>

                </div>
            </div>
        </div>
   

    <footer class="footer-bottom">
        <div class="container">

            <div class="col-md-12 col-sm-12">
                <a href="~/Home" class="logo-bottom col-md-12"><img alt="" src="~/image/logo/rolex-logo.svg"></a>
            </div>

            <div class="share-logo">
                <div class="row ">
                    <div class="col-md-12 col-sm-12 text-center">
                        <div class="share-logo-link ">
                            <!-- social media link -->
                            <a target="_blank" href="https://www.facebook.com/rolex/?fref=ts/"><i class="fa fa-facebook fa-2x" style="color:blue"></i></a>
                            <a target="_blank" href="https://twitter.com/"><i class="fa fa-twitter fa-2x" style="color:blue"></i></a>
                            <a target="_blank" href="https://plus.google.com"><i class="fa fa-google-plus fa-2x" style="color:red"></i></a>
                            <a target="_blank" href="https://dribbble.com/"><i class="fa fa-dribbble fa-2x" style="color:red"></i></a>
                            <a target="_blank" href="https://www.youtube.com/user/WorldOfRolex"><i class="fa fa-youtube fa-2x" style="color:red"></i></a>
                            <a target="_blank" href="https://www.linkedin.com/"><i class="fa fa-linkedin fa-2x" style="color:red"></i></a>
                            <!-- end social media link -->
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-column">
                <div class="col-md-2 col-sm-12">
                    <div class="title-footer btn"> Our Store </div>
                    <div class="textwidget">
                        <ul class="menu-footer">
                            <li><a href="#">New York</a></li>
                            <li><a href="#">London SF</a></li>
                            <li><a href="#">Cockfosters BP</a></li>
                            <li><a href="#">Los Angeles</a></li>
                            <li><a href="#">Chicago</a></li>
                            <li><a href="#">Las Vegas</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="title-footer btn">ĐỒng Hồ Rolex</div>
                    <div class="textwidget">
                        <ul class="menu-footer">
                            <li><a href="#">Đồng Hồ Nam</a></li>
                            <li><a href="#">Đồng Hồ Nữ</a></li>
                            <li><a href="#">Đồng Hồ Hot</a></li>
                            <li><a href="#">Đồng Hồ 2016</a></li>
                            <li><a href="#">Phiên Bản Đặt Biệt</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-2 btn">
                    <div class="title-footer">
                        Bộ Sưu Tập
                    </div>
                </div>
                <div class="col-md-2 btn">
                    <div class="title-footer">
                        Dịch Vụ
                    </div>
                </div>
                <div class="col-md-4 btn">
                    <div class="title-footer">
                        THế Giới Rolex
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-link">

            <div class="col-md-12 footer-end">
                <hr class="hr-footer" width="80%" align="center" />
                <p>&copy;2016  Một sản phẩm của Quảng và Thanh.<a href="http://facebook.com/lethanhquangqb1995" target="_blank">T&Q</a></p>
            </div>
            <div class="col-md-4">

            </div>
        </div>
    </footer>


    @*javascripts*@
    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });
        });
    </script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery-3.1.1.min.js"></script>

</body>
</html>
